<project> 

  <modelVersion>4.0.0</modelVersion> 
  <groupId>org.eis</groupId> 
  <artifactId>eis</artifactId> 
  <version>0.2</version> 

  <build>
    <plugins>
    
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.1</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>

        <executions>

          <execution>
            <id>carriage</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>carriage</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.carriage.EnvironmentInterface</mainClass>
                  <packageName>eis.examples.carriage</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
            </configuration>
          </execution>

          <execution>
            <id>acconnector2009</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>acconnector2009</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.acconnector2009.EnvironmentInterface</mainClass>
                  <packageName>eis.examples.acconnector2009</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
            </configuration>
          </execution>

          <execution>
            <id>communication</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>communication</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.communication.EnvironmentInterface</mainClass>
                  <packageName>eis.examples.communication</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
            </configuration>
          </execution>

        </executions>
      </plugin> 
            
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>



</project> 
