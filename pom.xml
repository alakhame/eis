<project> 

  <modelVersion>4.0.0</modelVersion> 
  <groupId>apleis</groupId> 
  <artifactId>eis</artifactId> 
  <version>0.2</version> 
  <url>http://sourceforge.net/projects/apleis/</url>
  <build>
    <plugins>
    
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <compilerVersion>1.6</compilerVersion>
          <fork>true</fork> 
        </configuration>
      </plugin>
      
      <!--plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>eis/examples/**</exclude>
          </excludes>
        </configuration>
      </plugin-->
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>

        <executions>
        
          <execution>
            <id>lib</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>lib</classifier>
              <excludes>
                <exclude>eis/examples/**</exclude>
              </excludes>
            </configuration>
          </execution>

          <execution>
            <id>carriage</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>carriage</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.carriage.EnvironmentInterface</mainClass>
                  <packageName>eis.examples.carriage</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
              <includes>
                <include>eis/examples/carriage/*</include>
              </includes>
            </configuration>
          </execution>

          <execution>
            <id>acconnector2009</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>acconnector2009</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.acconnector2009.EnvironmentInterface</mainClass>
                  <packageName>eis.examples.acconnector2009</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
              <includes>
                <include>eis/examples/acconnector2009/*</include>
              </includes>
            </configuration>
          </execution>

          <execution>
            <id>acconnector2010</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>acconnector2010</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.acconnector2010.EnvironmentInterface</mainClass>
                  <packageName>eis.examples.acconnector2010</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
              <includes>
                <include>eis/examples/acconnector2010/*</include>
              </includes>
            </configuration>
          </execution>

          <execution>
            <id>communication</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>communication</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.communication.EnvironmentInterface</mainClass>
                  <packageName>eis.examples.communication</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
              <includes>
                <include>eis/examples/communication/*</include>
              </includes>
            </configuration>
          </execution>

          <execution>
            <id>entitygenerator</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>entitygenerator</classifier>
              <archive>
                <!--index>true</index-->
                <manifest>
                  <mainClass>eis.examples.entitygenerator.GeneratorInterface</mainClass>
                  <packageName>eis.examples.entitygenerator</packageName>
                </manifest>
                <manifestEntries>
                  <mode>development</mode>
                  <url>${pom.url}</url>
                </manifestEntries>
              </archive>
              <includes>
                <include>eis/examples/entitygenerator/*</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin> 
            
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project> 
